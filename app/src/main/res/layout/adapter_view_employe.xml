<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/colorBleuMarine"
        android:orientation="horizontal"
        android:padding="3dp"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216">

        <TextView
            android:id="@+id/list_id_num_employe"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_weight="20"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:text="@string/e01"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:maxWidth="220dp">

            <TextView
                android:id="@+id/list_nom_employe"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:layout_weight="50"
                android:gravity="center"
                android:text="@string/rakoto_bezara_augustun"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_adresse_employe"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:text="Rue Kotomila 1254"
                android:textAlignment="center"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/list_taux_horaire_employe"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="30"
            android:gravity="center"
            android:text="15000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:maxWidth="60dp"/>

        <ImageView
            android:id="@+id/edit_Employe"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.5"
            android:gravity="fill"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp" />
        <ImageView
            android:id="@+id/delete_Employe"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.5"
            android:padding="5dp"
            android:gravity="fill"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_baseline_delete_sweep_24"
            android:layout_marginRight="5dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>